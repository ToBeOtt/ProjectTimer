@page
@model ProjectTimer.Pages.Projects.IndexModel
@{
}
<link rel="stylesheet" href="~/css/savedprojecttimes.css" asp-append-version="true" />

<div class="container px-4">
  <div class="row gx-5">
        <div class="col" id="left-gutter">

                <h5>Lägg till projekt</h5>
                <form method="post">
                    <div class="mb-3">
                        <label for="formGroupExampleInput" class="form-label"></label>
                        <input type="text" class="form-control" value="" asp-for="Name">
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-success">Lägg till projekt</button>
                    </div>
                </form>
            
     
    </div>
        <div class="col" id="right-gutter">
            @if (Model.projectList != null)
            {
                <h5>Lägg till projekt</h5>
                <ul class="list-group list-group-flush">
                    @foreach (var project in Model.projectList)
                    {
                    <li class="list-group-item">
                        <p>
                        <span class="project-text">@project.Name</span>
                        <span class="project-icon">
                            <a asp-page="/Projects/ModifyProject" asp-page-handler="Delete" asp-route-id="@project.Id">
                                <img type="submit" src="~/images/trashcan.svg" alt="Picture of Trashcan">
                            </a>
                        </span>
                        </p>
                    </li>
                    }
                </ul>
                }   
        </div>  
    </div>
</div>

