@page
@using Microsoft.AspNetCore.Html;
@model ProjectTimer.Pages.Sessions.IndexModel
@{
}
<link rel="stylesheet" href="~/css/sessionspages.css" asp-append-version="true" />

<div class="container px-4 text-center">
    <div class="row gx-5">
        <div class="col" id="session-right-gutter"> @*Right gutter-column*@

            @*The view to start a new timer and choose which project to clock.*@
            <div class="p-3">
                @if ((HttpContext.Session.GetString("_Id") == null) && (Model.ViewSummary != true))
                {
                        <h5 style="text-align: center;">Tryck på ett projekt för att starta timer</h5>
                        <br />
                        <form method="post" asp-page-handler="StartClock">
                            <h6 style="text-align: center;">Lägg till arbetsbeskrivning</h6>
                            <div class="mb-3">
                                <textarea class="form-control" id="projectDescriptionTextarea" name="taskDescription" rows="4"></textarea>
                            </div>

                            <br><hr><br>

                            <h6 style="text-align: center;">Dina aktiva projekt</h6>
                            <ul class="nav" id="ul-start-session">
                                @foreach (var project in Model.ProjectList)
                                {
                                    <li class="nav-item">
                                        <div class="mb-3">
                                            <button type="submit" class="btn btn-outline-secondary" name="pID" value="@project.Id">
                                                @project.Name
                                            </button>
                                        </div>
                                    </li>
                                }
                            </ul>
                    </form>
                }

               @* Display summary of all timers and project after all timers have been summed up.*@
                @if (Model.ListOfTimerSummaries != null)
                {
                    int x = 0;
                    @foreach (var projectClockList in Model.ListOfTimerSummaries)
                    {
                        string pName = null;
                        for (int i = 0; i < projectClockList.Count; i++)
                        {
                            pName = @projectClockList[i].Project.Name;
                        }
                        <h5 style="text-align: left;">@pName</h5>
                        
                        foreach (var clock in projectClockList)
                        {
                            <div class="summary-text-box">
                                <p class="card-text"><strong>@clock.TotalMinutes min (@clock.Started.ToString("HH:mm") - @clock.Ended.ToString("HH:mm"))</strong></p>
                                <p class="card-text"><em>@clock.Description</em></p>
                            </div>
                        }
                        <h6>Dagens totala debiterbara tid för @pName är: @Model.TotalPricePerProjectList[x] minuter.</h6>
                        x = x + 1;
                        
                         <div class="sum-each-project-text" style="justify-items: left;">
                            <button type="submit" class="btn btn-outline-success">Spara projekttid</button>
                        </div>
                        <br />

                        <hr> <br />
                    }
                    
                }
                
        @*Shows only that a timer is active for the moment and all other data on session page is temporarily hidden*@
            @if (HttpContext.Session.GetString("_Id") != null)
            {
            <div class="clockSection">
                <h3>Timer pågående för @Model.Clock.Project.Name </h3>
                <hr>

                <form method="post" asp-page-handler="EndClock">
                    <div class="mb-3">
                        <button type="submit" class="btn btn-outline-danger" 
                        name="clockId" value="@Model.Clock.Id">
                            Avsluta timer
                        </button>
                    </div>
                </form>
            </div>
            }
                </div>
        </div>

       @* Option for sum all timers*@
        <div class="col" id="session-left-gutter"> @*Left gutter-column*@
            <div class="p-3">
                @if (HttpContext.Session.GetString("_Id") == null)
                {
                <form method="post" asp-page-handler="SumAll">
                    <button type="submit" class="btn btn-outline-success btn-lg" name="SumAll">
                        Summera alla timers
                    </button>
                </form>
                }

                <hr id="finished-clock-column-hr"/>

                @*Views all clocks of current date that has been finished. If none is finished, this is omitted.*@
                @if (Model.SummaryOfSessionClocks != null)
                {
                    @foreach (var projectclock in Model.SummaryOfSessionClocks)
                    {
                    <div class="card mb-3" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">@projectclock.Project.Name</h5>
                            <h6 class="card-title">@projectclock.Started.ToString("hh:mm") - @projectclock.Ended.ToString("hh:mm") </h6>
                            <p class="card-text">@projectclock.Description</p>

                                <div class="session-project-list-container">
                                    <a asp-page="/Sessions/ModifyClock" asp-page-handler="Edit" asp-route-id="@projectclock.Id">
                                        <img src="~/images/pencil-fill.svg" alt="Picture of pencil">
                                    </a>

                                    <a asp-page="/Sessions/ModifyClock" asp-page-handler="Delete" asp-route-id="@projectclock.Id">
                                        <img src="~/images/trashcan.svg" alt="Picture of trashcan">
                                    </a>
                                </div>
                        </div>
                    </div>
                    }
                }
                else
                {
                <div class="card mb-3" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Finns inga timers för dagen</h5>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>




















    

